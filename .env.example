# n8n Configuration
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=secure_password_here
WEBHOOK_URL=http://localhost:5678/
TIMEZONE=America/New_York
LOG_LEVEL=info

# Database Configuration
POSTGRES_PASSWORD=secure_postgres_password_here

# Database Administration (pgAdmin)
PGADMIN_EMAIL=admin@n8n-automation.local
PGADMIN_PASSWORD=admin123

# Redis Administration (Redis Commander)
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=admin123

# API Keys (Required)
OPENAI_API_KEY=sk-your-openai-api-key-here
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
AIRTABLE_API_KEY=your-airtable-api-key

# Optional API Keys
SCRAPE_NINJA_API_KEY=your-scrapeninja-api-key
PROXY_COUNTRY=US

# Job Search Configuration
MAX_APPLICATIONS_PER_DAY=20
MIN_MATCH_SCORE_THRESHOLD=50
APPLICATION_COOLDOWN_HOURS=4

# Security Settings
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=30
ENABLE_ANTI_DETECTION=true

# Monitoring (for monitoring stack)
GRAFANA_PASSWORD=admin123

# Notification Settings
SLACK_WEBHOOK_URL=your-slack-webhook-url
EMAIL_NOTIFICATIONS=true
SMS_NOTIFICATIONS=false